{
    "name": "163 open course downloader",
    "version": "1.0",
    "author" : "xesam",
    "manifest_version": 2,
    "description": "163 open course downloader",
    "offline_enabled": true,
    "content_scripts": [
        {
            "matches": ["http://v.163.com/*"],
            "css": [],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "http://v.163.com/*",
        "tabs",
        "downloads"
    ]
}